<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.questionPage">

    <TextView
        android:id="@+id/livesLabel"
        android:layout_width="39dp"
        android:layout_height="20dp"
        android:text="Lives:"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/livesText2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568" />

    <TextView
        android:id="@+id/livesText2"
        android:layout_width="31dp"
        android:layout_height="20dp"
        android:layout_marginEnd="168dp"
        android:layout_marginTop="24dp"
        android:text="2"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.406" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="260dp"
        android:layout_height="226dp"
        android:layout_marginTop="108dp"
        android:background="@color/labelBackground"
        android:gravity="center_vertical"
        android:text="What is the maximum number of children a Binary Search Tree Node can have?"
        android:textColor="@color/labelText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/aButton"
        android:layout_width="220dp"
        android:layout_height="60dp"

        android:layout_marginBottom="20dp"
        android:layout_marginTop="48dp"
        android:background="@color/newButton"
        android:text="3"
        android:textColor="@color/labelText"
        app:layout_constraintBottom_toTopOf="@+id/bButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/bButton"
        android:layout_width="220dp"
        android:layout_height="60dp"

        android:layout_marginTop="20dp"
        android:background="@color/newButton"
        android:text="1"
        android:textColor="@color/labelText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aButton" />

    <Button
        android:id="@+id/cButton"
        android:layout_width="220dp"
        android:layout_height="60dp"

        android:layout_marginTop="20dp"
        android:background="@color/newButton"
        android:text="Unlimited"
        android:textColor="@color/labelText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bButton"
        app:layout_constraintVertical_bias="0.00999999" />

    <Button
        android:id="@+id/dButton"
        android:layout_width="220dp"
        android:layout_height="60dp"

        android:layout_marginTop="20dp"
        android:background="@color/newButton"
        android:text="2"
        android:textColor="@color/labelText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cButton"
        app:layout_constraintVertical_bias="0.009" />
</androidx.constraintlayout.widget.ConstraintLayout>
