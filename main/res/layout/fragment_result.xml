<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.ExtraFact">

    <TextView
        android:id="@+id/livesLabel3"
        android:layout_width="40dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:text="Lives:"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/finalText"
        app:layout_constraintEnd_toStartOf="@+id/livesText3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.322" />

    <TextView
        android:id="@+id/livesText3"
        android:layout_width="21dp"
        android:layout_height="19dp"
        android:layout_marginEnd="164dp"
        android:text="-1"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/finalText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.322" />

    <TextView
        android:id="@+id/finalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:background="@color/labelBackground"
        android:gravity="center"
        android:text="Sorry. It's over."
        android:textColor="@color/labelText"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="142dp"
        android:layout_height="53dp"

        android:layout_marginTop="36dp"
        android:background="@color/newButton"
        android:text="Home"
        android:textColor="@color/labelText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restartButton" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="142dp"
        android:layout_height="53dp"

        android:layout_marginTop="88dp"
        android:background="@color/newButton"
        android:text="Restart"
        android:textColor="@color/labelText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finalText" />

    <Button
        android:id="@+id/logout"
        android:layout_width="142dp"
        android:layout_height="53dp"

        android:background="@color/newButton"
        android:text="Logout"
        android:textColor="@color/labelText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeButton"
        app:layout_constraintVertical_bias="0.102" />

</androidx.constraintlayout.widget.ConstraintLayout>
