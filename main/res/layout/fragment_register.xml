<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.register">

    <TextView
        android:id="@+id/registerText"
        android:layout_width="222dp"
        android:layout_height="61dp"
        android:layout_marginTop="100dp"
        android:background="@color/labelBackground"
        android:gravity="center_horizontal"
        android:text="Enter Your Register Information:"
        android:textColor="@color/labelText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registerSubmit"
        android:layout_width="142dp"
        android:layout_height="53dp"
        android:layout_marginTop="72dp"

        android:background="@color/newButton"
        android:text="Register"
        android:textColor="@color/labelText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEnter" />

    <Button
        android:id="@+id/backSubmit"
        android:layout_width="142dp"
        android:layout_height="53dp"

        android:layout_marginTop="28dp"
        android:background="@color/newButton"
        android:text="Back"
        android:textColor="@color/labelText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerSubmit"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/usernameEnter"
        android:layout_width="180dp"
        android:layout_height="47dp"

        android:layout_marginTop="12dp"

        android:background="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastName" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="180dp"
        android:layout_height="47dp"

        android:layout_marginTop="16dp"

        android:background="@color/colorAccent"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Last Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstName" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="180dp"
        android:layout_height="47dp"

        android:layout_marginTop="84dp"
        android:background="@color/colorAccent"

        android:gravity="center_horizontal|center_vertical"
        android:hint="First Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerText" />

    <EditText
        android:id="@+id/passwordEnter"
        android:layout_width="180dp"
        android:layout_height="47dp"

        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"

        android:gravity="center_horizontal|center_vertical"
        android:hint="Password"
        android:inputType="textPersonName|textPassword"
        android:password="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameEnter" />

</androidx.constraintlayout.widget.ConstraintLayout>
